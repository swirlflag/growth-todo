{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,

		// baseUrl, alias
		"baseUrl": "./",
		"paths": {
			"@/*": ["/*"],
            "@styles/*": ["src/styles/*"],
            // "@/pages/*": ["pages/*"],
			// "@/basic/*": ["components/v1/common/basic/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.scss"],
	"exclude": ["node_modules"]
}
